{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "cypress/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "plugin:cypress/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "cypress"
    ],
    "rules": {
      "vue/html-indent": ["error", 2],
      "vue/max-attributes-per-line": ["error", {
        "singleline": 1,
        "multiline": 1
      }],
      "no-unused-vars": ["error", { "args": "none" }],
      "vue/html-self-closing": ["warn", {
        "html": {
          "void": "never",
          "normal": "any",
          "component": "always"
        }
      }]
    }
  }
  